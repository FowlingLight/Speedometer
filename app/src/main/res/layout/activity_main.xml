<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.griffith.horiot.assignment3.MainActivity"
    android:orientation="vertical">

    <com.griffith.horiot.assignment3.GraphView
        android:id="@+id/graph_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/tracker_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/tracker_off" />

    <com.griffith.horiot.assignment3.GPSTrackerView
        android:id="@+id/gps_tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
